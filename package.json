{
  "private": true,
  "scripts": {
    "release": "changeset publish",
    "lint:js": "xo",
    "lint:md": "remark . -qfo",
    "lint": "yarn lint:js && yarn lint:md",
    "prelint:md": "yarn types:build",
    "test": "yarn lint && yarn test:packages",
    "test:packages": "nyc ava",
    "pretest:packages": "yarn types:build",
    "types:build": "yarn tsc --build",
    "types:clean": "yarn tsc --build --clean"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@changesets/cli": "^2.12.0",
    "@tsconfig/node14": "^1.0.0",
    "@types/mime": "^2.0.3",
    "@types/node": "^14.14.28",
    "@types/sinon": "^9.0.9",
    "ava": "^3.15.0",
    "aws-sdk": "^2.845.0",
    "eslint-plugin-prettier": "^3.3.0",
    "next": "^10.0.7",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "remark": "^13.0.0",
    "remark-cli": "^9.0.0",
    "remark-lint": "^8.0.0",
    "remark-preset-lint-recommended": "^5.0.0",
    "remark-usage": "^9.0.0",
    "rollup": "^3.12.1",
    "sinon": "^9.2.4",
    "typescript": "^4.1.3",
    "xo": "^0.38.1"
  },
  "ava": {
    "files": [
      "packages/*/test/*"
    ],
    "typescript": {
      "rewritePaths": {
        "packages/create-presigned-post/test/": "packages/create-presigned-post/dist/test/",
        "packages/init-middleware/test/": "packages/init-middleware/dist/test/",
        "packages/itunes-feed/test/": "packages/itunes-feed/dist/test/"
      }
    }
  },
  "nyc": {
    "reporter": [
      "text",
      "html",
      "lcov"
    ],
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/test/**"
    ]
  },
  "remarkConfig": {
    "settings": {
      "bullet": "-",
      "listItemIndent": "one"
    }
  },
  "xo": {
    "prettier": true,
    "space": true,
    "rules": {
      "ava/no-ignored-test-files": "off"
    }
  }
}
